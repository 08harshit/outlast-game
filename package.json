{
  "name": "outlast-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "postinstall": "npm install --prefix client && npm install --prefix server",
    "dev:client": "npm run start --prefix client",
    "dev:server": "npm run start:dev --prefix server",
    "build:client": "npm run build --prefix client",
    "build:server": "npm run build --prefix server",
    "build:all": "npm run build:server && npm run build:client"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "ts-node": "^10.9.1"
  }
}
